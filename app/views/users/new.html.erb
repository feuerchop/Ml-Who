<h1>Register a new user </h1>
<%= form_for :user, url: users_path do |f| %>
   Profile Picture <%= f.file_field :picture %><br>
   <%= f.hidden_field :pic_path %>
   Name <%= f.text_field :name %><br>
   Age <%= f.text_field :age %><br>
   Gender <%= f.text_field :gender %> <br>
   Email <%= f.text_field :email %><br>
   Address <%= f.text_field :address %> <br>
   Phone <%= f.text_field :phone %><br>
   <%= f.submit "Register"%>
<% end %>
