<% content_for :sidebar do %>
   <ul class="list-group">
      <p>
         All users
      </p>
      <% @users.each do |user| %>
         <li class="list-group-item">
            <%= image_tag user.pic_path, size: "20x20"  %>
            <%= link_to user.name, user_path(user) %></li>
      <% end %>
   </ul>
<% end %>

<%= render "author", object: @ml_author %>
