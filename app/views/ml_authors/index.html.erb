<table id="ml_author_table" class="table table-hover">
  <tr>
    <th class='col-md-3'><%= fa_icon "user", text: 'Name ' %>
      <!-- TODO: <a href="ml_authors/sort/name/asc"><%= fa_icon "sort" %></a> -->
   </th>
    <th class='col-md-7'><%= fa_icon "university", text: 'Affiliation' %>Affiliation</th>
    <!-- <th>Country</th>
    <th>Email</th> -->
    <th class='col-md-2' style="text-align: center;"><%= fa_icon "trophy", text: 'Appeared' %></th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td class='col-md-3'><%= link_to author.name, ml_author_path(author) %></td>
      <td class='col-md-7'><%= author.affiliation %></td>
      <!-- <td><%= author.country %></td>
      <td><%= author.email %></td> -->
      <td class='col-md-2' style="text-align: center;"><%= author.n_appeared %></td>
    </tr>
  <% end %>
</table>
<div class="digg_pagination">
   <%= will_paginate @authors %>
</div>

<% content_for :sidebar do %>
   <ul class="list-group">
      <p>
         All users
      </p>
      <% @users.each do |user| %>
         <li class="list-group-item">
            <%= image_tag user.pic_path, size: "20x20"  %>
            <%= link_to user.name, user_path(user) %></li>
      <% end %>
   </ul>
<% end %>
